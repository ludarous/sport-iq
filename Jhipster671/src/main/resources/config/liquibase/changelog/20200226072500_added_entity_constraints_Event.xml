<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <!--
        Added the constraints for entity Event.
    -->
    <changeSet id="20200226072500-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="event_location_id"
                                 baseTableName="event"
                                 constraintName="fk_event_event_location_id"
                                 referencedColumnNames="id"
                                 referencedTableName="event_location"/>

        <addForeignKeyConstraint baseColumnNames="event_id"
                                 baseTableName="event_tests"
                                 constraintName="fk_event_tests_event_id"
                                 referencedColumnNames="id"
                                 referencedTableName="event"/>

        <addForeignKeyConstraint baseColumnNames="tests_id"
                                 baseTableName="event_tests"
                                 constraintName="fk_event_tests_tests_id"
                                 referencedColumnNames="id"
                                 referencedTableName="workout"/>
        
        <addForeignKeyConstraint baseColumnNames="event_id"
                                 baseTableName="event_athletes"
                                 constraintName="fk_event_athletes_event_id"
                                 referencedColumnNames="id"
                                 referencedTableName="event"/>

        <addForeignKeyConstraint baseColumnNames="athletes_id"
                                 baseTableName="event_athletes"
                                 constraintName="fk_event_athletes_athletes_id"
                                 referencedColumnNames="id"
                                 referencedTableName="athlete"/>
        
    </changeSet>
</databaseChangeLog>
